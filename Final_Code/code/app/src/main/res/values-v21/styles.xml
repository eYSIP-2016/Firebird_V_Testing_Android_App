<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorPressedHighlight">@color/pressed</item>
        <item name="android:popupTheme">@style/Widget.AppCompat.PopupMenu</item>
    </style>

    <style name="MyTextViewStyle" parent="Base.TextAppearance.AppCompat">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@color/text_head1</item>-->
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MyTextStyle" parent="MyTextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#212121</item>

    </style>

    <style name="MyHeadTextStyle" parent="MyTextViewStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>





</resources>
