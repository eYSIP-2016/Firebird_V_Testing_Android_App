<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context="com.example.jatin.wi_bird.VelocityActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:id="@+id/velocity_head"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="SET MOTOR VELOCITY"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            >
        </TextView>

        <LinearLayout
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_below="@+id/velocity_head"
            android:layout_centerVertical="true"
            android:id="@+id/set_velocity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:text="LEFT MOTOR"/>
            <TextView
                style="@style/TextAppearance.AppCompat"
                android:textSize="@dimen/activity_vertical_margin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="RIGHT MOTOR"/>

        </LinearLayout>

        <!-- android:layout_below="@+id/right_velocity_seekbar"-->

    <LinearLayout
        android:id="@+id/seekarc_layout"
        android:layout_below="@+id/set_velocity_layout"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center">

        <com.triggertrap.seekarc.SeekArc
            android:id="@+id/seekArc_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            seekarc:max="255"
            android:layout_weight="1"

            seekarc:arcColor="@color/colorAccent"
            android:padding="30dp"
            seekarc:rotation="180"
            seekarc:startAngle="30"
            seekarc:sweepAngle="300"
            seekarc:touchInside="true" />

        <com.triggertrap.seekarc.SeekArc
            android:id="@+id/seekArc_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            seekarc:max="255"
            seekarc:arcColor="@color/colorAccent"
            android:padding="30dp"
            seekarc:rotation="180"
            seekarc:startAngle="30"
            seekarc:sweepAngle="300"
            seekarc:touchInside="true"
             />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/edittext_velocity_layout"
            android:layout_below="@id/seekarc_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </LinearLayout>

            <TextView
                android:id="@+id/left_velocity_text"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="0"
                android:editable="false"
                android:singleLine="true"
                android:textColor="@color/colorAccent"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </LinearLayout><LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </LinearLayout>
            <TextView
                android:id="@+id/right_velocity_text"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:editable="false"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="0"
                android:singleLine="true"
                android:textColor="@color/colorAccent"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/edittext_velocity_layout"
            android:layout_alignParentBottom="true">
        <Button
            android:theme="@style/Widget.AppCompat.Button"
            android:id="@+id/set_button"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:elevation="2dp"
            android:text="SET"
            android:textColor="#fff"
            android:background="@color/colorAccent"/>
        </RelativeLayout>



    </RelativeLayout>
</RelativeLayout>

