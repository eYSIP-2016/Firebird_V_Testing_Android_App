                android:layout_alignRight="@+id/ic_sharp_sensor"
                android:layout_below="@+id/sharp_sensor_value4"
                android:layout_marginTop="2dp"
                android:background="@color/text_head1"
                android:gravity="center"
                android:text="Sharp Sensor 5"
                android:textColor="@color/text_sensor"
                >

            </TextView>


            <TextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:id="@+id/proximity_sensor_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sharp_sensor_value5"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="PROXIMITY SENSOR VALUES"
                android:textColor="@color/text_sensor"
                >

            </TextView>

            <ImageView
                android:id="@+id/ic_proximity_sensor"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/proximity_sensor_head"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_proximity_sensor"></ImageView>

            <TextView
                android:id="@+id/proximity_sensor_value1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
