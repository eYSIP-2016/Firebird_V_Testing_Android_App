                android:layout_alignRight="@+id/ic_proximity_sensor"
                android:layout_below="@+id/proximity_sensor_value7"
                android:layout_marginTop="2dp"
                android:background="@color/text_head1"
                android:gravity="center"
                android:text="Proximity Sensor 8"
                android:textColor="@color/text_sensor"
                >

            </TextView>


            <TextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:id="@+id/white_sensor_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/proximity_sensor_value8"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="WHITE LINE SENSOR VALUES"
                android:textColor="@color/text_sensor"
                >

            </TextView>

            <ImageView
                android:id="@+id/ic_white_line_sensor"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_below="@+id/white_sensor_head"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_white_line_sensor"></ImageView>


            <TextView
                android:id="@+id/white_sensor_value1"
