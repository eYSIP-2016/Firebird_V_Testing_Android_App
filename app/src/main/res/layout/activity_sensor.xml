                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ic_proximity_sensor"
                android:layout_alignLeft="@+id/ic_proximity_sensor"
                android:layout_alignRight="@+id/ic_proximity_sensor"
                android:layout_below="@+id/proximity_sensor_value2"
                android:layout_marginTop="2dp"
                android:background="@color/text_head1"
